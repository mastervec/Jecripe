private var gc:GameObject;

function Start()
{
	gc = GameObject.Find("GameController");
	this.GetComponent.<GUITexture>().pixelInset.x = -this.GetComponent.<GUITexture>().pixelInset.width;
}

function OnMouseDown () 
{
	gc.GetComponent("GUIFader").GUIFaderIn(0.3,1);
	LoadMenu();
}

function OnMouseOver() 
{
	this.GetComponent.<GUITexture>().pixelInset.width = 100;
	this.GetComponent.<GUITexture>().pixelInset.height = 100;
	this.GetComponent.<GUITexture>().pixelInset.x = -this.GetComponent.<GUITexture>().pixelInset.width;
}

function OnMouseExit() 
{
	this.GetComponent.<GUITexture>().pixelInset.width = 70;
	this.GetComponent.<GUITexture>().pixelInset.height = 70;
	this.GetComponent.<GUITexture>().pixelInset.x = -this.GetComponent.<GUITexture>().pixelInset.width;
}

function LoadMenu()
{
	yield WaitForSeconds(1.1);
	Application.LoadLevel ("Mapa");
}